<!-- app/views/registrations/new.html.erb -->
<div class="signup-form">
  <h2>Sign Up</h2>

  <%= form_with(model: @user, url: registrations_path, method: :post) do |form| %>
    <%= render 'shared/error_messages', object: @user %>

    <div class="form-group">
      <%= form.label :first_name, class: 'label' %>
      <%= form.text_field :first_name, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: 'label' %>
      <%= form.text_field :last_name, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'label' %>
      <%= form.email_field :email, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number, class: 'label' %>
      <%= form.text_field :phone_number, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'label' %>
      <%= form.password_field :password, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, class: 'label' %>
      <%= form.password_field :password_confirmation, class: 'input' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Sign Up', class: 'btn-submit' %>
    </div>
  <% end %>
</div>
